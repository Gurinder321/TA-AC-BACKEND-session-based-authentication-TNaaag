<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <nav>
      <a href="/">Homepage</a>
      <a href="/articles/new">Add Articles</a>
    </nav>

    <h1><%= article.title %></h1>
    <h3><%= article.author %></h3>
    <% article.tags.forEach(t => { %>
    <span><%= t %></span>
    <% }) %>
    <p><%= article.description %></p>
    <h3><%= article.likes ? article.likes : 0 %></h3>
    <a href="/articles/<%= article._id %>/likes">
      <button>Like</button>
    </a>
    <a href="/articles/<%= article._id %>/edit">
      <button>Edit</button>
    </a>
    <a href="/articles/<%= article._id %>/delete">
      <button>Delete</button>
    </a>
<h2>Add a comment</h2>
    <div>
      <form action="/articles/<%= article.id %>/comments" method="POST">
        <textarea id="" name="text" cols="30" rows="10" placeholder="Add Comment..."></textarea>
        <br>
        <input type="text" placeholder="Author">
        <br>
        <input type="submit" value="Add Comment" />
      </form>
    </div>


    <h2>Comments</h2>
</div>
<% article.comments.forEach(comment => { %>
<div>
  <p><%= comment.content %></p>
  <a href="/comments/<%= comment.id %>/edit">
    <button>Edit</button>
  </a>
  <a href="/comments/<%= comment.id %>/delete">
    <button>Delete</button>
  </a>
</div>
<% }) %>
  </body>
</html>